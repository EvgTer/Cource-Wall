<Window x:Class="Cource_Wall_.CompleatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cource_Wall_"
        mc:Ignorable="d"
        Title="Compleating" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock x:Name="txtFile" MinWidth="100" Width="Auto" Height="20" Margin="10"/>
        <Button Content="Upload file..." Width="100" Height="80" Margin="20 20 20 0" Click="btnUpload_Click"/>
        <ProgressBar x:Name="prUpload" Height="20" Width="200"/>
        <TextBox x:Name="tbComm" TextWrapping="Wrap" AcceptsReturn="True" Height="80" Margin="10 0 10 10" VerticalScrollBarVisibility="Auto" Width="300"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnOK" Content="OK" Width="80" Margin="20" Click="btnOK_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Margin="20" Click="btnCancel_Click"/>
        </StackPanel>  
    </StackPanel>
</Window>
